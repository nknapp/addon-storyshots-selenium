{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"@typescript-eslint/no-explicit-any": "off"
	},
	"overrides": [
		{
			"files": ["**/*.test.ts"],
			"env": {
				"jest": true
			}
		},
		{
			"files": ["**/*.stories.js"],
			"env": {
				"browser": true
			}
		}
	]
}
